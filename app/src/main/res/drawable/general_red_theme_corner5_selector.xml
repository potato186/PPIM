<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

<!-- pressed -->
<!--<item android:state_pressed="true"><shape android:shape="rectangle">
    <solid android:color="@color/theme_focus_color"/>
    <corners android:radius="5dp" />
</shape></item>-->
<item android:state_pressed="true"><shape android:shape="rectangle">
    <gradient
        android:angle="135"
        android:startColor="@color/theme_end_focus_color"
        android:endColor="@color/theme_focus_color"
        />
    <corners android:radius="5dp" />
</shape></item>
<!-- focus -->
<item android:state_focused="true"><shape android:shape="rectangle">
    <gradient
        android:angle="135"
        android:startColor="@color/theme_end_focus_color"
        android:endColor="@color/theme_focus_color"
        />
    <corners android:radius="5dp" />
</shape></item>
<!-- default -->
<item><shape android:shape="rectangle">
    <gradient
        android:angle="135"
        android:startColor="@color/theme_end_color"
        android:endColor="@color/theme_color"
        />
    <corners android:radius="5dp" />
</shape></item>

</selector>