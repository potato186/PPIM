<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <ImageView
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:src="@mipmap/fund_top_icon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.122" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/gray_text333_color"
        android:textSize="16sp"
        android:text="@string/my_fund"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.252" />
    <TextView
        android:id="@+id/fund"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="45dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.3" />
    <TextView
        android:id="@+id/accept_btn"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:gravity="center"
        android:background="@drawable/general_red_theme_corner5_selector"
        android:text="@string/code_accept"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.56" />
    <TextView
        android:id="@+id/scan_to_trans"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:textColor="@color/theme_color"
        android:textSize="16sp"
        android:gravity="center"
        android:background="@drawable/general_gray_btn_selector"
        android:text="@string/scan_code_trans"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.668" />
    <TextView
        android:id="@+id/trans"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:textColor="@color/theme_color"
        android:textSize="16sp"
        android:gravity="center"
        android:background="@drawable/general_gray_btn_selector"
        android:text="@string/trans_to_friend"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.768" />
    <TextView
        android:id="@+id/common_question"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:textColor="@color/theme_color"
        android:textSize="14sp"
        android:gravity="center"
        android:background="@drawable/general_red_theme_corner5_selector"
        android:text="@string/common_question"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.88"
        android:visibility="gone"
        />
    <TextView
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:textColor="@color/theme_color"
        android:textSize="14sp"
        android:gravity="center"
        android:background="@drawable/general_tran_gray_btn_selector"
        android:text="@string/common_question"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.88"
        android:visibility="gone"
        />
</android.support.constraint.ConstraintLayout>
