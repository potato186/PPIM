<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/layout"
    android:orientation="vertical"
    android:padding="10dp"
    >

<android.support.constraint.ConstraintLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.ilesson.ppim.view.RoundImageView
        android:layout_width="95dp"
        android:layout_height="95dp"
        android:id="@+id/wares_img"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:scaleType="centerCrop"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/wares_name"
        android:maxEms="10"
        android:maxLines="2"
        android:ellipsize="end"
        android:textColor="@color/gray_text333_color"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/wares_img"
        android:layout_marginLeft="20dp"
        app:layout_constraintTop_toTopOf="@+id/wares_img"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/wares_quantity"
        android:textColor="@color/gray_text_color"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@+id/wares_img"
        android:layout_marginLeft="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/wares_img"
        android:layout_marginBottom="5dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/wares_price"
        android:textColor="@color/red"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/wares_img"
        android:layout_marginLeft="20dp"
        app:layout_constraintBottom_toTopOf="@+id/wares_quantity"
        android:layout_marginBottom="5dp"
        />

</android.support.constraint.ConstraintLayout>
    <TextView
        android:id="@+id/tag"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_theme"
        android:layout_marginTop="10dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="详情介绍"
        android:textSize="16sp"
        android:textColor="@color/gray_text333_color"
        android:layout_marginTop="10dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/wares_des"
        android:lineSpacingMultiplier="1.2"
        android:textSize="15sp"
        android:layout_marginTop="10dp"
        />
</LinearLayout>