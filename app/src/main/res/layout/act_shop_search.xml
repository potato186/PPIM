<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_theme"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignParentTop="true"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/back_btn"
            android:layout_width="@dimen/back_width"
            android:layout_height="match_parent"
            android:background="@drawable/general_tran_gray_btn_selector"
            >

            <TextView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerInParent="true"
                android:background="@mipmap/back_icon" />
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/key_pading"
            android:text="邦邦导购"
            android:layout_centerInParent="true"
            android:textColor="@color/gray_text333_color"
            android:textSize="18sp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.2dp"
            android:background="@color/update_cancel_color"
            android:layout_alignParentBottom="true"
            />
    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/top_bar"
        android:layout_above="@+id/control_view"
        android:layout_marginBottom="10dp"
        android:scrollbars="none"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <LinearLayout
                android:id="@+id/result_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_below="@+id/top_bar"
                android:padding="5dp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/request_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:textColor="@color/gray_text333_color"
                    android:layout_marginBottom="5dp"
                    android:layout_marginRight="5dp"
                    android:padding="8dp"
                    android:visibility="gone"
                    android:background="@drawable/background_white_corner5"
                    android:textSize="16sp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tts"
                    android:textSize="16sp"
                    android:padding="8dp"
                    android:visibility="gone"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/background_white_corner5"
                    />
                <LinearLayout
                    android:id="@+id/show_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical"
                    android:visibility="gone"
                    android:background="@drawable/background_white_corner5"
                    >
                    <ImageView
                        android:id="@+id/result_image"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="5dp"
                        />
                    <TextView
                        android:id="@+id/result_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/background_white_corner10"
                        android:textColor="@color/gray_text333_color"
                        android:textSize="18sp" />
                    <TextView
                        android:id="@+id/to_set_address"
                        android:layout_width="120dp"
                        android:layout_height="38dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="10dp"
                        android:text="@string/order_set_address"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:visibility="gone"
                        android:textSize="16sp"
                        android:background="@drawable/general_theme_corner20_selector"
                        />
                </LinearLayout>
            </LinearLayout>
            <android.support.constraint.ConstraintLayout
                android:id="@+id/wares_intro_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/result_view"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="5dp"
                android:paddingBottom="10dp"
                android:visibility="gone"
                android:background="@drawable/background_white_corner5"
                >
                <RelativeLayout
                    android:id="@+id/content_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="10dp"
                    >
                    <com.ilesson.ppim.view.RoundImageView
                        android:layout_width="95dp"
                        android:layout_height="95dp"
                        android:id="@+id/wares_img"
                        android:scaleType="centerCrop"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="10dp"
                        />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/wares_img"
                        android:orientation="vertical"
                        android:layout_centerVertical="true"
                        >
                        <TextView
                            android:id="@+id/wares_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:textColor="@color/gray_text333_color"
                            android:textSize="18sp" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/wares_price"
                            android:textColor="@color/red"
                            android:textSize="18sp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="5dp"
                            />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/wares_quantity"
                            android:textColor="@color/gray_text_color"
                            android:textSize="16sp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="5dp"
                            />

                    </LinearLayout>


                </RelativeLayout>

                <TextView
                    android:id="@+id/tag2"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/gray_theme"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/content_view"
                    android:layout_marginTop="15dp"
                    />
                <TextView
                    android:id="@+id/order_num_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="@+id/tag2"
                    app:layout_constraintTop_toBottomOf="@+id/tag2"
                    android:text="@string/username"
                    android:layout_marginTop="15dp"
                    android:textSize="16sp"
                    />
                <TextView
                    android:id="@+id/username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toEndOf="@+id/order_num_name"
                    app:layout_constraintTop_toBottomOf="@+id/tag2"
                    android:layout_marginTop="10dp"
                    android:textSize="16sp"
                    android:layout_marginLeft="40dp"
                    android:textColor="@color/gray_text333_color"
                    />
                <TextView
                    android:id="@+id/phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="@+id/tag2"
                    app:layout_constraintTop_toBottomOf="@+id/order_num_name"
                    android:text="@string/rc_android.permission.READ_PHONE_STATE"
                    android:layout_marginTop="10dp"
                    android:textSize="16sp"
                    />
                <TextView
                    android:id="@+id/phone_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toEndOf="@+id/address"
                    app:layout_constraintTop_toBottomOf="@+id/order_num_name"
                    android:layout_marginTop="10dp"
                    android:textSize="16sp"
                    android:layout_marginLeft="40dp"
                    android:textColor="@color/gray_text333_color"
                    />
                <TextView
                    android:id="@+id/address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="@+id/tag2"
                    app:layout_constraintTop_toBottomOf="@+id/phone"
                    android:text="@string/address"
                    android:layout_marginTop="10dp"
                    android:textSize="16sp"
                    />
                <TextView
                    android:id="@+id/address_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toEndOf="@+id/address"
                    app:layout_constraintTop_toBottomOf="@+id/phone"
                    android:layout_marginTop="10dp"
                    android:textSize="16sp"
                    android:layout_marginLeft="40dp"
                    android:textColor="@color/gray_text333_color"
                    />
                <TextView
                    android:id="@+id/to_pay"
                    android:layout_width="100dp"
                    android:layout_height="38dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/address_view"
                    android:layout_marginTop="5dp"
                    android:text="@string/order_go_pay"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:textSize="16sp"
                    android:visibility="gone"
                    android:background="@drawable/general_theme_corner20_selector"
                    />
            </android.support.constraint.ConstraintLayout>
            <TextView
                android:id="@+id/help_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="8dp"
                android:visibility="gone"
                android:background="@drawable/background_white_corner5"
                android:textColor="@color/gray_text333_color"
                android:textSize="18sp" />
        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:id="@+id/control_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"
        >

        <TextView
            android:id="@+id/keyboard"
            android:layout_width="25dp"
            android:layout_height="20dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30dp"
            android:visibility="gone"
            android:background="@drawable/btn_keboard_selector" />
        <TextView
            android:id="@+id/play_tts"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30dp"
            android:background="@mipmap/sy_of" />


        <android.support.constraint.ConstraintLayout
            android:id="@+id/shop_car_view"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="30dp"
            >
            <TextView
                android:id="@+id/shop_car"
                android:layout_width="30dp"
                android:layout_height="30dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:background="@mipmap/shop_car_" />
            <TextView
                android:id="@+id/order_num"
                android:layout_width="@dimen/unRead_width"
                android:layout_height="@dimen/unRead_width"
                android:background="@drawable/oval_back"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="@dimen/unRead_font_size"
                android:text="1"
                android:visibility="gone"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                tools:ignore="MissingConstraints" />
        </android.support.constraint.ConstraintLayout>
    </RelativeLayout>
    <ImageView
        android:id="@+id/voice_icon"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="-10dp"
        android:src="@mipmap/mai"/>
</RelativeLayout>