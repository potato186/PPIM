<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:id="@+id/top_layout"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignParentTop="true"
        android:background="@color/gray_theme"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/back_btn"
            android:layout_width="@dimen/back_width"
            android:layout_height="match_parent"
            android:background="@drawable/general_tran_gray_btn_selector">

            <TextView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerInParent="true"
                android:background="@mipmap/back_icon" />
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/key_pading"
            android:text="@string/trans_score_title"
            android:textColor="@color/gray_text333_color"
            android:textSize="18sp" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/tip"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_below="@+id/top_layout"
        android:background="@color/gray_theme">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="35dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/top_layout"
                android:layout_marginTop="10dp"
                android:text="@string/trans_to_person"
                android:textColor="@color/gray_text333_color"
                android:textSize="16sp"

                />

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="potato"
                android:textSize="14sp" />
        </LinearLayout>
        <com.ilesson.ppim.view.RoundImageView
            android:id="@+id/user_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="30dp"
            android:scaleType="centerCrop"
            />
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/score_view"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/tip"
        >
        <TextView
            android:id="@+id/content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="35dp"
            android:layout_centerVertical="true"
            android:text="@string/select_currency"
            android:textColor="@color/registe_text_color"
            android:textSize="15sp" />
        <LinearLayout
            android:id="@+id/currency_view"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            >
        <TextView
            android:id="@+id/select_currency"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="@string/score"
            android:textColor="@color/gray_text333_color"
            android:textSize="15sp" />
        <TextView
            android:id="@+id/select_currency_arrow"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:background="@mipmap/right_arrow"/>
        </LinearLayout>
    </RelativeLayout>

    <EditText
        android:id="@+id/textAmount"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/score_view"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="20dp"
        android:textCursorDrawable="@drawable/rc_shape_cursor_color"
        android:background="#FFFFFF"
        android:hint="@string/input_score_hint"
        android:inputType="numberDecimal"
        android:textColor="#333333"
        android:textSize="22sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/textAmount"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="35dp"
        android:background="@color/gray_theme"
        />
    <android.support.constraint.ConstraintLayout
        android:id="@+id/score_layout"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:layout_alignParentBottom="true"
        android:background="@color/gray_theme"
        android:padding="@dimen/key_pading"
        >

        <TextView
            android:id="@+id/one"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:background="@drawable/general_white_gray_cornor5_btn_selector"
            android:gravity="center"
            android:text="1"
            android:textColor="@color/black"
            android:textSize="22sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="@dimen/percen" />

        <TextView
            android:id="@+id/two"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_marginLeft="@dimen/key_pading"
            android:background="@drawable/general_white_gray_cornor5_btn_selector"
            android:gravity="center"
            android:text="2"
            android:textColor="@color/black"
            android:textSize="22sp"
            app:layout_constraintLeft_toRightOf="@+id/one"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="@dimen/percen" />

        <TextView
            android:id="@+id/three"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_marginLeft="@dimen/key_pading"
            android:background="@drawable/general_white_gray_cornor5_btn_selector"
            android:gravity="center"
            android:text="3"
            android:textColor="@color/black"
            android:textSize="22sp"
            app:layout_constraintLeft_toRightOf="@+id/two"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="@dimen/percen" />

        <RelativeLayout
            android:id="@+id/delete"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_marginLeft="@dimen/key_pading"
            android:background="@drawable/general_white_gray_cornor5_btn_selector"
            app:layout_constraintLeft_toRightOf="@+id/three"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="@dimen/percen">

            <TextView
                android:layout_width="28dp"
                android:layout_height="25dp"
                android:layout_centerInParent="true"
                android:background="@mipmap/word_delete" />
        </RelativeLayout>

        <TextView
            android:id="@+id/four"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_marginTop="@dimen/key_pading"
            android:background="@drawable/general_white_gray_cornor5_btn_selector"
            android:gravity="center"
            android:text="4"
            android:textColor="@color/black"
            android:textSize="22sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/one"
            app:layout_constraintWidth_percent="@dimen/percen" />

        <TextView
            android:id="@+id/five"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_marginLeft="@dimen/key_pading"
            android:layout_marginTop="@dimen/key_pading"
            android:background="@drawable/general_white_gray_cornor5_btn_selector"
            android:gravity="center"
            android:text="5"
            android:textColor="@color/black"
            android:textSize="22sp"
            app:layout_constraintLeft_toRightOf="@+id/four"
            app:layout_constraintTop_toBottomOf="@+id/one"
            app:layout_constraintWidth_percent="@dimen/percen" />

        <TextView
            android:id="@+id/six"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_marginLeft="@dimen/key_pading"
            android:layout_marginTop="@dimen/key_pading"
            android:background="@drawable/general_white_gray_cornor5_btn_selector"
            android:gravity="center"
            android:text="6"
            android:textColor="@color/black"
            android:textSize="22sp"
            app:layout_constraintLeft_toRightOf="@+id/five"
            app:layout_constraintTop_toBottomOf="@+id/one"
            app:layout_constraintWidth_percent="@dimen/percen" />

        <TextView
            android:id="@+id/seven"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_marginTop="@dimen/key_pading"
            android:background="@drawable/general_white_gray_cornor5_btn_selector"
            android:gravity="center"
            android:text="7"
            android:textColor="@color/black"
            android:textSize="22sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/four"
            app:layout_constraintWidth_percent="@dimen/percen" />

        <TextView
            android:id="@+id/eight"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_marginLeft="@dimen/key_pading"
            android:layout_marginTop="@dimen/key_pading"
            android:background="@drawable/general_white_gray_cornor5_btn_selector"
            android:gravity="center"
            android:text="8"
            android:textColor="@color/black"
            android:textSize="22sp"
            app:layout_constraintLeft_toRightOf="@+id/seven"
            app:layout_constraintTop_toBottomOf="@+id/four"
            app:layout_constraintWidth_percent="@dimen/percen" />

        <TextView
            android:id="@+id/nine"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_marginLeft="@dimen/key_pading"
            android:layout_marginTop="@dimen/key_pading"
            android:background="@drawable/general_white_gray_cornor5_btn_selector"
            android:gravity="center"
            android:text="9"
            android:textColor="@color/black"
            android:textSize="22sp"
            app:layout_constraintLeft_toRightOf="@+id/eight"
            app:layout_constraintTop_toBottomOf="@+id/four"
            app:layout_constraintWidth_percent="@dimen/percen" />

        <TextView
            android:id="@+id/zero"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_marginTop="@dimen/key_pading"
            android:background="@drawable/general_white_gray_cornor5_btn_selector"
            android:gravity="center"
            android:text="0"
            android:textColor="@color/black"
            android:textSize="22sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/nine"
            app:layout_constraintWidth_percent="0.485" />

        <TextView
            android:id="@+id/dot"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_marginLeft="@dimen/key_pading"
            android:layout_marginTop="@dimen/key_pading"
            android:background="@drawable/general_white_gray_cornor5_btn_selector"
            android:gravity="center"
            android:text="."
            android:textColor="@color/black"
            android:textSize="22sp"
            app:layout_constraintLeft_toRightOf="@+id/eight"
            app:layout_constraintTop_toBottomOf="@+id/nine"
            app:layout_constraintWidth_percent="@dimen/percen" />

        <TextView
            android:id="@+id/trans"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginLeft="@dimen/key_pading"
            android:layout_marginTop="@dimen/key_pading"
            android:background="@drawable/general_red_theme_corner5_selector"
            android:gravity="center"
            android:text="@string/rc_confirm"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:layout_constraintHeight_percent="0.737"
            app:layout_constraintLeft_toRightOf="@+id/six"
            app:layout_constraintTop_toBottomOf="@+id/one"
            app:layout_constraintWidth_percent="@dimen/percen" />
    </android.support.constraint.ConstraintLayout>

    <RelativeLayout
        android:id="@+id/pay_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#88000000"
        android:visibility="gone"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            android:layout_marginLeft="45dp"
            android:layout_marginRight="45dp"
            android:background="@drawable/background_white_corner5"
            >
            <TextView
                android:id="@+id/close"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:background="@mipmap/close_icon"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/please_input_pay_pwd"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:textSize="16sp"
                android:textColor="@color/gray_text333_color"
                />
            <TextView
                android:id="@+id/pay_for_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/close"
                android:layout_marginTop="15dp"
                android:textSize="16sp"
                android:textColor="@color/gray_text333_color"
                />
            <TextView
                android:id="@+id/pay_for_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/pay_for_user"
                android:layout_marginTop="10dp"
                android:textSize="25sp"
                android:textColor="@color/gray_text333_color"
                />
            <TextView
                android:id="@+id/line"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/pay_for_score"
                android:layout_marginTop="15dp"
                android:background="@color/update_cancel_color"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                />
            <TextView
                android:id="@+id/pay_way"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/line"
                android:layout_marginTop="20dp"
                android:textSize="14sp"
                android:layout_marginLeft="15dp"
                android:text="@string/pay_way"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/line"
                android:layout_marginTop="20dp"
                android:textSize="14sp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:text="@string/fund_score"
                android:textColor="@color/gray_text333_color"
                />
            <LinearLayout
                android:id="@+id/code_layout"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:orientation="horizontal"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_below="@+id/pay_way"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/background_gray_empty"
                >
                <EditText
                    android:id="@+id/code1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:inputType="textPassword"
                    android:textCursorDrawable="@drawable/rc_shape_cursor_color"
                    android:background="@null"
                    android:ems="1"
                    android:textColor="@color/grey_login_color"
                    android:textSize="@dimen/pwd_size"
                    />
                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="1dp"
                    android:layout_marginBottom="1dp"
                    android:background="@color/update_cancel_color"
                    />
                <EditText
                    android:id="@+id/code2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:inputType="textPassword"
                    android:textCursorDrawable="@drawable/rc_shape_cursor_color"
                    android:background="@null"
                    android:ems="1"
                    android:textColor="@color/grey_login_color"
                    android:textSize="@dimen/pwd_size"
                    />
                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="1dp"
                    android:layout_marginBottom="1dp"
                    android:background="@color/update_cancel_color"
                    />
                <EditText
                    android:id="@+id/code3"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:inputType="textPassword"
                    android:textCursorDrawable="@drawable/rc_shape_cursor_color"
                    android:background="@null"
                    android:ems="1"
                    android:textColor="@color/grey_login_color"
                    android:textSize="@dimen/pwd_size"
                    />
                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="1dp"
                    android:layout_marginBottom="1dp"
                    android:background="@color/update_cancel_color"
                    />
                <EditText
                    android:id="@+id/code4"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:inputType="textPassword"
                    android:textCursorDrawable="@drawable/rc_shape_cursor_color"
                    android:background="@null"
                    android:ems="1"
                    android:textColor="@color/grey_login_color"
                    android:textSize="@dimen/pwd_size"
                    />
                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="1dp"
                    android:layout_marginBottom="1dp"
                    android:background="@color/update_cancel_color"
                    />
                <EditText
                    android:id="@+id/code5"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:inputType="textPassword"
                    android:textCursorDrawable="@drawable/rc_shape_cursor_color"
                    android:background="@null"
                    android:ems="1"
                    android:textColor="@color/grey_login_color"
                    android:textSize="@dimen/pwd_size"
                    />
                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="1dp"
                    android:layout_marginBottom="1dp"
                    android:background="@color/update_cancel_color"
                    />
                <EditText
                    android:id="@+id/code6"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:inputType="textPassword"
                    android:textCursorDrawable="@drawable/rc_shape_cursor_color"
                    android:background="@null"
                    android:ems="1"
                    android:textColor="@color/grey_login_color"
                    android:textSize="@dimen/pwd_size"
                    />
            </LinearLayout>
        </RelativeLayout>
        <com.ilesson.ppim.view.VirtualKeyboardView
            android:id="@+id/virtualKeyboardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom" />
    </RelativeLayout>
</RelativeLayout>
