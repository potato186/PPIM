<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/background_white_corner5"
    android:padding="15dp">

    <TextView
        android:id="@+id/order_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="@string/order_info"
        android:textColor="@color/gray_text333_color"
        android:textSize="18sp"
        />
    <TextView
        android:id="@+id/order_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="@string/to_post"
        android:textColor="@color/theme_color"
        android:textSize="16sp"
        />
    <TextView
        android:id="@+id/tag"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_theme"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/order_info"
        android:layout_marginTop="10dp"
        android:visibility="gone"
        />
    <include
        android:id="@+id/content_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/order_info"
        android:layout_marginTop="5dp"
        layout="@layout/wares_layout"
        />

    <TextView
        android:id="@+id/tag2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_theme"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/content_layout"
        android:layout_marginTop="10dp"
        />
    <TextView
        android:id="@+id/confirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tag2"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="@string/confirm_recept"
        android:textSize="16sp"
        android:background="@drawable/general_red_theme_corner20_selector"
        android:textColor="@color/white"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="7dp"
        android:paddingBottom="7dp"
        android:layout_marginTop="13dp"
        android:visibility="gone"
        />
    <TextView
        android:id="@+id/check_logistc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tag2"
        app:layout_constraintEnd_toStartOf="@+id/confirm"
        android:text="@string/check_logistc"
        android:textSize="16sp"
        android:background="@drawable/general_gray_edge_white_corner20_selector"
        android:textColor="@color/black"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="7dp"
        android:paddingBottom="7dp"
        android:layout_marginTop="13dp"
        />
    <TextView
        android:id="@+id/call_server"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tag2"
        app:layout_constraintEnd_toStartOf="@+id/check_logistc"
        android:layout_marginRight="10dp"
        android:text="@string/call_server"
        android:textSize="16sp"
        android:background="@drawable/general_gray_edge_white_corner20_selector"
        android:textColor="@color/black"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="7dp"
        android:paddingBottom="7dp"
        android:layout_marginTop="13dp"
        />


</android.support.constraint.ConstraintLayout>