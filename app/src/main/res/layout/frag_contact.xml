<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/gray_theme"
        android:visibility="gone"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/gray_text333_color"
            android:textSize="18sp"
            android:text="通讯录"
            android:layout_marginLeft="15dp"
            android:layout_centerVertical="true"
            />
        <TextView
            android:id="@+id/add"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@mipmap/add_icon"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:layout_centerVertical="true"
            />
        <TextView
            android:id="@+id/search"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@mipmap/search_icon"
            android:layout_alignParentRight="true"
            android:layout_marginRight="45dp"
            android:layout_centerVertical="true"
            />
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/new_friend_layout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@android:color/white"
        android:layout_marginTop="7dp"
        >
        <ImageView
            android:id="@+id/user_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@mipmap/add_user_icon"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp"
            />
        <TextView
            android:id="@+id/user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textSize="18sp"
            android:textColor="@color/gray_text333_color"
            android:layout_marginLeft="15dp"
            android:text="@string/new_friend"
            />
        <TextView
            android:id="@+id/msg_tip"
            android:layout_width="@dimen/unRead_width"
            android:layout_height="@dimen/unRead_width"
            android:background="@drawable/oval_back"
            android:layout_gravity="center_vertical"
            android:textColor="@color/white"
            android:textSize="@dimen/unRead_font_size"
            android:gravity="center"
            android:layout_marginLeft="5dp"
            android:visibility="gone"
            />
    </LinearLayout>
   <!-- <ListView
        android:id="@+id/listiview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:divider="@color/list_story_click"
        android:dividerHeight="0.5dp"
        android:visibility="gone"
        android:background="@color/white"
        android:layout_below="@+id/new_friend_layout"
        />-->
    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/swipeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/new_friend_layout"
        android:layout_marginTop="7dp">
    <android.support.v7.widget.RecyclerView
        android:id="@+id/recylerview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        />

    </android.support.v4.widget.SwipeRefreshLayout>
    <com.ilesson.ppim.contactview.LetterView
        android:id="@+id/letter_view"
        android:layout_width="30dp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        />
</RelativeLayout>
