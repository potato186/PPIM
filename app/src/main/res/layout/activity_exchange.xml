<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_theme"
    android:orientation="vertical"
    >

    <RelativeLayout
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal"
        android:layout_alignParentTop="true"
        android:background="@color/white"
        >

        <RelativeLayout
            android:id="@+id/back_btn"
            android:layout_width="@dimen/back_width"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:background="@drawable/general_tran_gray_btn_selector"
            >
            <TextView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@mipmap/back_icon"
                android:layout_centerInParent="true"
                />
        </RelativeLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/exchange_order"
            android:layout_centerInParent="true"
            android:textSize="20sp"
            android:textColor="@color/gray_text333_color"
            />
    </RelativeLayout>
    <ScrollView
        android:id="@+id/scrollview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/top_bar"
        android:layout_above="@+id/bottom"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/white"
            >
            <RelativeLayout
                android:id="@+id/address_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="15dp"
                android:background="@drawable/white_gray_btn_selector"
                >
                <RelativeLayout
                    android:id="@+id/no_address_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:minHeight="60dp"
                    android:layout_toLeftOf="@+id/arrow"
                    android:visibility="gone"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:id="@+id/no_address"
                        android:text="@string/no_address"
                        android:textColor="@color/gray_text333_color"
                        android:textSize="@dimen/text_size_18"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:text="@string/to_address"
                        android:textColor="@color/helptext_color"
                        android:textSize="@dimen/text_size_16"
                        />
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/address_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toLeftOf="@+id/arrow"
                    android:layout_marginTop="15dp"
                    >

                    <TextView
                        android:id="@+id/tag"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/home"
                        android:paddingTop="3dp"
                        android:paddingBottom="3dp"
                        android:paddingRight="10dp"
                        android:paddingLeft="10dp"
                        android:gravity="center"
                        android:textColor="@color/theme_text_color"
                        android:background="@drawable/background_theme_click_corner5"
                        android:textSize="16sp" />
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_below="@+id/tag"
                        android:layout_marginTop="5dp"
                        >
                        <TextView
                            android:id="@+id/user_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentLeft="true"
                            android:textSize="@dimen/text_size_16"
                            android:textColor="@color/gray_text333_color"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_alignParentTop="true"
                            android:id="@+id/phone"
                            android:layout_toRightOf="@+id/user_name"
                            android:textColor="@color/gray_text333_color"
                            android:textSize="@dimen/text_size_16"
                            />

                        <TextView
                            android:id="@+id/address"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/user_name"
                            android:textSize="@dimen/text_size_16"
                            android:layout_marginTop="5dp"
                            android:textColor="@color/gray_text333_color"
                            />
                    </RelativeLayout>

                </RelativeLayout>

                <TextView
                    android:id="@+id/arrow"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:background="@mipmap/right_arrow"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    />
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/gray_theme"
                />

            <RelativeLayout
                android:id="@+id/content_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:layout_marginLeft="15dp"
                >
                <RelativeLayout
                    android:id="@+id/wares_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                    <com.ilesson.ppim.view.RoundImageView
                        android:layout_width="95dp"
                        android:layout_height="95dp"
                        android:id="@+id/wares_img"
                        android:scaleType="centerCrop"
                        android:layout_marginTop="10dp"
                        />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/wares_img"
                        android:orientation="vertical"
                        android:layout_marginTop="10dp"
                        >
                        <TextView
                            android:id="@+id/wares_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:textColor="@color/gray_text333_color"
                            android:textSize="18sp" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/wares_quantity"
                            android:textColor="@color/helptext_color"
                            android:textSize="14sp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="5dp"
                            />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/wares_score_price"
                            android:textColor="@color/red"
                            android:textSize="16sp"
                            android:layout_marginLeft="20dp"
                            />

                    </LinearLayout>
                </RelativeLayout>

            </RelativeLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0.6dp"
                android:background="@color/gray_theme"
                android:layout_marginTop="20dp"
                />
            <TextView
                android:id="@+id/has_score"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textColor="@color/helptext_color"
                android:textSize="16sp"
                android:gravity="center_vertical|right"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="15dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/wares_type"
                android:textColor="@color/gray_text333_color"
                android:textSize="16sp"
                android:layout_marginLeft="15dp"
                />

            <com.ilesson.ppim.view.TagCloudView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/tag_cloud_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                app:tcvBorder="10dp"
                app:tcvItemBorderVertical="10dp"
                app:tcvTextColor="@color/gray_text333_color"
                app:tcvCanTagClick="true"
                />
            <android.support.v7.widget.RecyclerView
                android:id="@+id/recylerview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/quantity"
                android:textColor="@color/gray_text333_color"
                android:textSize="16sp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="15dp"
                />
            <TextView
                android:id="@+id/least"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="最少兑换"
                android:textColor="@color/helptext_color"
                android:textSize="14sp"
                android:layout_marginLeft="15dp"
                />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="15dp"
                >
                <TextView
                    android:id="@+id/most"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="最少兑换"
                    android:textColor="@color/gray_text333_color"
                    android:textSize="16sp"
                    android:visibility="gone"
                    android:layout_centerVertical="true"
                    />
                <RelativeLayout
                    android:id="@+id/add"
                    android:layout_width="40dp"
                    android:layout_height="50dp"
                    android:layout_alignParentRight="true"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="+"
                        android:textColor="@color/gray_text333_color"
                        android:textSize="20sp"
                        />
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/minus"
                    android:layout_width="40dp"
                    android:layout_height="50dp"
                    android:layout_toLeftOf="@+id/num"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="−"
                        android:textColor="@color/gray_text333_color"
                        android:textSize="20sp"
                        />
                </RelativeLayout>
                <TextView
                    android:id="@+id/num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/background_gray_corner20"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/add"
                    android:text="1"
                    android:textSize="16sp"
                    android:textColor="@color/theme_color"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp"
                    />
            </RelativeLayout>


        </LinearLayout>
    </ScrollView>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:layout_alignParentBottom="true"
        android:id="@+id/bottom"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/exchange_score_all"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:textSize="16sp"
            />
        <TextView
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:id="@+id/exchange"
            android:text="@string/exchange_now"
            android:textColor="@color/white"
            android:layout_alignParentRight="true"
            android:background="@drawable/general_red_theme_selector"
            android:gravity="center"
            android:textSize="16sp"
            />
    </RelativeLayout>
</RelativeLayout>
