<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

   <RelativeLayout
       android:id="@+id/share"
       android:layout_width="match_parent"
       android:layout_height="60dp"
       android:background="@drawable/up_selector"
       >
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
            android:text="@string/share"
           android:textSize="18sp"
           android:textColor="@color/gray_text333_color"
           android:layout_centerInParent="true"
           android:layout_marginLeft="20dp"
           />
       <TextView
           android:layout_width="match_parent"
           android:layout_height="1dp"
           android:background="@color/history_list_diver"
           android:layout_marginRight="5dp"
           android:layout_marginLeft="5dp"
           android:layout_alignParentBottom="true"
           />
   </RelativeLayout>
   <RelativeLayout
       android:id="@+id/collect"
       android:layout_width="match_parent"
       android:layout_height="60dp"
       android:background="@drawable/up_selector"
       >
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
            android:text="@string/collect"
           android:textSize="18sp"
           android:textColor="@color/gray_text333_color"
           android:layout_centerInParent="true"
           android:layout_marginLeft="20dp"
           />
       <TextView
           android:layout_width="match_parent"
           android:layout_height="1dp"
           android:background="@color/history_list_diver"
           android:layout_marginRight="5dp"
           android:layout_marginLeft="5dp"
           android:layout_alignParentBottom="true"
           />
   </RelativeLayout>
   <RelativeLayout
       android:id="@+id/send_current"
       android:layout_width="match_parent"
       android:layout_height="60dp"
       android:background="@drawable/up_selector"
       >
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
            android:text="@string/send_current_friend"
           android:textSize="18sp"
           android:textColor="@color/gray_text333_color"
           android:layout_centerInParent="true"
           android:layout_marginLeft="20dp"
           />
       <TextView
           android:layout_width="match_parent"
           android:layout_height="1dp"
           android:background="@color/history_list_diver"
           android:layout_marginRight="5dp"
           android:layout_marginLeft="5dp"
           android:layout_alignParentBottom="true"
           />
   </RelativeLayout>

    <RelativeLayout
        android:id="@+id/send_to_other"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/up_selector"
        >

        <TextView
            android:id="@+id/send_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="20dp"
            android:text="@string/send_other_friend"
            android:textColor="@color/gray_text333_color"
            android:textSize="18sp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/history_list_diver"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:layout_alignParentBottom="true"
            />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/cancel"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/up_selector"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cancel"
            android:textSize="18sp"
            android:textColor="@color/gray_text333_color"
            android:layout_centerInParent="true"
            android:layout_marginLeft="20dp"
            />
    </RelativeLayout>
</LinearLayout>