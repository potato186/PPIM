<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/layout"
        android:padding="10dp"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/new_order_tips"
            android:textColor="@color/gray_text333_color"
            android:textSize="18sp"
            android:id="@+id/tip"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray_theme"
            android:layout_marginTop="10dp"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tip"
            android:layout_marginTop="15dp"
            >
            <com.ilesson.ppim.view.RoundImageView
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:id="@+id/wares_img"
                android:scaleType="centerCrop"
                android:src="@mipmap/logo"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/wares_name"
                android:maxEms="10"
                android:maxLines="2"
                android:ellipsize="end"
                android:textColor="@color/gray_text333_color"
                android:textSize="17sp"
                android:layout_marginLeft="10dp"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/wares_img"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/wares_quantity"
                android:textSize="16sp"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/wares_img"
                android:layout_below="@+id/wares_name"
                android:layout_marginTop="5dp"
                android:lines="2"
                android:ellipsize="end"
                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            >
            <TextView
                android:id="@+id/num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/quantity_"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/all_price"
                android:layout_marginRight="10dp"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/all_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="@string/all_fee_"
                android:textSize="14sp" />
        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray_theme"
            />
        <LinearLayout
            android:id="@+id/logistics_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/background_white_corner5"
            android:layout_marginTop="10dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            >
            <LinearLayout
                android:id="@+id/order_num_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="@dimen/order_item_left_item_width"
                    android:layout_height="wrap_content"
                    android:text="@string/order_num_"
                    android:textSize="14sp"
                    />
                <TextView
                    android:id="@+id/order_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/order_item_left_margin"
                    android:textSize="14sp"
                    android:textColor="@color/second_blk_text"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/post_time_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/order_item_top_margin"
                >
                <TextView
                    android:layout_width="@dimen/order_item_left_item_width"
                    android:layout_height="wrap_content"
                    android:text="@string/pay_time"
                    android:textSize="14sp"
                    />
                <TextView
                    android:id="@+id/post_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/order_item_left_margin"
                    android:textSize="14sp"
                    android:textColor="@color/second_blk_text"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/consignee_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/order_item_top_margin"
                >
                <TextView
                    android:layout_width="@dimen/order_item_left_item_width"
                    android:layout_height="wrap_content"
                    android:text="@string/consignee_"
                    android:textSize="14sp"
                    />
                <TextView
                    android:id="@+id/consignee"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/order_item_left_margin"
                    android:textSize="14sp"
                    android:textColor="@color/second_blk_text"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/phone_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/order_item_top_margin"
                >
                <TextView
                    android:layout_width="@dimen/order_item_left_item_width"
                    android:layout_height="wrap_content"
                    android:text="收件人电话"
                    android:textSize="14sp"
                    />
                <TextView
                    android:id="@+id/phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/order_item_left_margin"
                    android:textSize="14sp"
                    android:textColor="@color/second_blk_text"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/consignee_address_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/order_item_top_margin"
                >

                <TextView
                    android:layout_width="@dimen/order_item_left_item_width"
                    android:layout_height="wrap_content"
                    android:text="收件人地址"
                    android:textSize="14sp" />
                <TextView
                    android:id="@+id/address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/order_item_left_margin"
                    android:textSize="14sp"
                    android:textColor="@color/second_blk_text"
                    />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/address_layout"
            android:layout_gravity="center_horizontal"
            >
            <TextView
                android:id="@+id/call_server"
                android:layout_width="95dp"
                android:layout_height="wrap_content"
                android:text="@string/order_detail"
                android:textSize="16sp"
                android:background="@drawable/general_gray_btn_corner20_selector"
                android:textColor="@color/gray_text333_color"
                android:paddingTop="7dp"
                android:paddingBottom="7dp"
                android:layout_marginTop="13dp"
                android:gravity="center"
                />
            <TextView
                android:id="@+id/confirm"
                android:layout_width="95dp"
                android:layout_height="wrap_content"
                android:text="@string/to_post"
                android:layout_marginLeft="20dp"
                android:textSize="16sp"
                android:background="@drawable/general_red_theme_corner20_selector"
                android:textColor="@color/white"
                android:paddingTop="7dp"
                android:paddingBottom="7dp"
                android:layout_marginTop="13dp"
                android:gravity="center"
                />

        </LinearLayout>


    </LinearLayout>
</LinearLayout>
