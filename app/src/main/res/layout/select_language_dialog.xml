<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:background="@drawable/background_white"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/language_tag"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:text="@string/your_language"
        android:textSize="15sp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:gravity="center"
        android:id="@+id/mandrain_tag1"
        app:layout_constraintTop_toBottomOf="@+id/language_tag"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="15dp"
        android:text="@string/mandarin"
        android:textSize="16sp"
        android:textColor="@color/gray_text333_color"
        />
     <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:gravity="center"
        android:id="@+id/mandrain1"
        app:layout_constraintTop_toBottomOf="@+id/language_tag"
        app:layout_constraintStart_toEndOf="@+id/mandrain_tag1"
        android:layout_marginLeft="5dp"
         android:src="@mipmap/checked"
         android:padding="8dp"
        />
     <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:gravity="center"
        android:id="@+id/cantonese1"
        app:layout_constraintTop_toBottomOf="@+id/language_tag"
        app:layout_constraintEnd_toEndOf="parent"
         android:layout_marginRight="30dp"
        android:layout_marginLeft="5dp"
         android:src="@drawable/gray_edge_circle"
         android:padding="8dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:gravity="center"
        android:id="@+id/cantonese_tag1"
        app:layout_constraintTop_toBottomOf="@+id/language_tag"
        app:layout_constraintEnd_toStartOf="@+id/cantonese1"
        android:layout_marginRight="5dp"
        android:text="@string/cantonese"
        android:textSize="16sp"
        android:textColor="@color/gray_text333_color"
        />
    <TextView
        android:id="@+id/tag1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        android:background="@color/general_color"
        app:layout_constraintTop_toBottomOf="@+id/cantonese_tag1"
        app:layout_constraintStart_toStartOf="parent"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tts_language_tag"
        app:layout_constraintTop_toBottomOf="@+id/tag1"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:text="@string/tts_language"
        android:textSize="15sp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:gravity="center"
        android:id="@+id/mandrain_tag2"
        app:layout_constraintTop_toBottomOf="@+id/tts_language_tag"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="15dp"
        android:text="@string/mandarin"
        android:textSize="16sp"
        android:textColor="@color/gray_text333_color"
        />
     <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:gravity="center"
        android:id="@+id/mandrain2"
        app:layout_constraintTop_toBottomOf="@+id/tts_language_tag"
        app:layout_constraintStart_toEndOf="@+id/mandrain_tag2"
        android:layout_marginLeft="5dp"
         android:src="@mipmap/checked"
         android:padding="8dp"
        />
     <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:gravity="center"
        android:id="@+id/cantonese2"
        app:layout_constraintTop_toBottomOf="@+id/tts_language_tag"
        app:layout_constraintEnd_toEndOf="parent"
         android:layout_marginRight="30dp"
        android:layout_marginLeft="5dp"
         android:src="@drawable/gray_edge_circle"
         android:padding="8dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:gravity="center"
        android:id="@+id/cantonese_tag2"
        app:layout_constraintTop_toBottomOf="@+id/tts_language_tag"
        app:layout_constraintEnd_toStartOf="@+id/cantonese1"
        android:layout_marginRight="5dp"
        android:text="@string/cantonese"
        android:textSize="16sp"
        android:textColor="@color/gray_text333_color"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        android:id="@+id/tag2"
        android:background="@color/general_color"
        app:layout_constraintTop_toBottomOf="@+id/cantonese_tag2"
        app:layout_constraintStart_toStartOf="parent"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/tag2"
        app:layout_constraintStart_toStartOf="parent">
        <TextView
            android:id="@+id/left_btn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/cancel"
            android:gravity="center"
            android:textColor="@color/gray_text333_color"
            android:background="@drawable/general_dialog_left_btn_selector"
            android:textSize="18sp"
            />
        <TextView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/general_color"
            />
        <TextView
            android:id="@+id/right_btn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/confirm"
            android:gravity="center"
            android:textColor="@color/theme_color"
            android:background="@drawable/general_dialog_right_btn_selector"
            android:textSize="18sp"
            />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>