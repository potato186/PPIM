<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <RelativeLayout
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignParentTop="true"
        android:background="@color/gray_bg_color">

        <RelativeLayout
            android:id="@+id/back_btn"
            android:layout_width="@dimen/back_width"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:background="@drawable/general_tran_gray_btn_selector">

            <TextView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerInParent="true"
                android:background="@mipmap/back_icon" />
        </RelativeLayout>

        <TextView
            android:id="@+id/title_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:singleLine="true"
            android:ellipsize="end"
            android:ems="13"
            android:layout_toRightOf="@id/back_btn"
            android:textColor="@color/gray_text333_color"
            android:textSize="18sp"
            />

        <RelativeLayout
            android:id="@+id/menu"
            android:layout_width="40dp"
            android:layout_height="45dp"
            android:layout_alignParentRight="true"
            android:visibility="gone"
            android:background="@drawable/general_tran_gray_btn_selector">

            <TextView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerInParent="true"
                android:background="@mipmap/gray_menu" />
        </RelativeLayout>
        <EditText
            android:id="@+id/editTag"
            android:layout_width="1dp"
            android:layout_height="1dp"
            />
    </RelativeLayout>

    <!--<FrameLayout
        android:id="@+id/conversation_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/top_bar"
        />-->
    <fragment
        android:id="@+id/fragment_conversation"
        android:name="com.ilesson.ppim.fragment.ConversationFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/top_bar" />

    <LinearLayout
        android:id="@+id/shop_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/shop_dialog_bg"
        android:clickable="true"
        android:focusable="true"
        android:layout_marginBottom="50dp"
        android:orientation="vertical"
        android:visibility="gone"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="120dp"
            android:background="@drawable/background_gray_corner15"

            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/background_gray_title_corner15"
                >
                <LinearLayout
                    android:id="@+id/menu_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    >
                    <TextView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:id="@+id/play_tts"
                        android:background="@mipmap/sy_of"
                        android:layout_gravity="center_vertical"
                        />
                    <android.support.constraint.ConstraintLayout
                        android:id="@+id/shop_car_view"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="20dp"
                        android:visibility="gone"
                        >
                        <TextView
                            android:id="@+id/shop_car"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            android:background="@mipmap/shop_car_" />
                        <TextView
                            android:id="@+id/order_num"
                            android:layout_width="@dimen/unRead_width"
                            android:layout_height="@dimen/unRead_width"
                            android:background="@drawable/oval_back"
                            android:gravity="center"
                            android:textColor="@color/white"
                            android:textSize="@dimen/unRead_font_size"
                            android:text="1"
                            android:visibility="gone"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:layout_marginTop="5dp"
                            android:layout_marginRight="5dp"
                            tools:ignore="MissingConstraints" />
                    </android.support.constraint.ConstraintLayout>
                </LinearLayout>
                <TextView
                    android:id="@+id/close"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:background="@mipmap/gb" />
            </RelativeLayout>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/close"
                android:layout_marginBottom="10dp"
                android:scrollbars="none">
                    <LinearLayout
                        android:id="@+id/result_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginLeft="5dp"
                        android:orientation="vertical"
                        android:lineSpacingMultiplier="1.2"
                        android:padding="5dp">

                        <TextView
                            android:id="@+id/request_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:background="@drawable/background_yellow_corner8"
                            android:padding="8dp"
                            android:textColor="@color/gray_text333_color"
                            android:textSize="16sp"
                            android:lineSpacingMultiplier="1.2"
                            android:visibility="gone" />
                        <TextView
                            android:id="@+id/tts_modify"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:padding="8dp"
                            android:textSize="16sp"
                            android:layout_marginTop="10dp"
                            android:textColor="@color/gray_text_color"
                            android:background="@drawable/background_white_corner5"
                            android:lineSpacingMultiplier="1.2"
                            android:visibility="gone" />
                        <LinearLayout
                            android:id="@+id/show_content"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/background_white_corner5"
                            android:orientation="vertical"
                            android:padding="10dp"
                            >

                            <TextView
                                android:id="@+id/tts"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="16sp"
                                android:textColor="@color/gray_text333_color"
                                android:lineSpacingMultiplier="1.2"
                                android:letterSpacing="0.05"
                                android:visibility="gone"
                                />

                            <ImageView
                                android:id="@+id/result_image"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="10dp"
                                android:layout_marginBottom="5dp"
                                android:visibility="gone"
                                android:minHeight="100dp"
                                android:minWidth="100dp"
                                android:scaleType="fitXY"
                                />
                            <LinearLayout
                                android:id="@+id/wares_intro_view"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/result_view"
                                android:layout_marginTop="5dp"
                                android:orientation="vertical"
                                >
                                <include
                                    android:id="@+id/content_layout"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent"
                                    layout="@layout/wares_layout"
                                    />
                                <TextView
                                    android:id="@+id/tag2"
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:layout_marginTop="20dp"
                                    android:background="@color/gray_theme"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toBottomOf="@+id/content_layout" />
                                <LinearLayout
                                    android:id="@+id/address_layout"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:layout_marginTop="15dp"
                                    android:visibility="gone"
                                    >
                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"

                                        >
                                        <TextView
                                            android:id="@+id/order_num_name"
                                            android:layout_width="55dp"
                                            android:layout_height="wrap_content"
                                            android:text="@string/username"
                                            android:textSize="14sp" />

                                        <TextView
                                            android:id="@+id/username"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_toRightOf="@+id/order_num_name"
                                            android:textColor="@color/gray_text333_color"
                                            android:textSize="14sp"
                                            />
                                    </RelativeLayout>
                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="3dp"
                                        >
                                        <TextView
                                            android:id="@+id/phone"
                                            android:layout_width="55dp"
                                            android:layout_height="wrap_content"
                                            android:text="@string/phone"
                                            android:textSize="14sp" />

                                        <TextView
                                            android:id="@+id/phone_view"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_toRightOf="@+id/phone"
                                            android:textColor="@color/gray_text333_color"
                                            android:textSize="14sp"
                                            />
                                    </RelativeLayout>

                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="3dp"
                                        >
                                        <TextView
                                            android:id="@+id/address"
                                            android:layout_width="55dp"
                                            android:layout_height="wrap_content"
                                            android:text="@string/address"
                                            android:lineSpacingMultiplier="1.2"
                                            android:textSize="14sp" />

                                        <TextView
                                            android:id="@+id/address_view"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_toRightOf="@+id/address"
                                            android:textColor="@color/gray_text333_color"
                                            android:textSize="14sp"
                                            />
                                    </RelativeLayout>
                                </LinearLayout>
                                <TextView
                                    android:id="@+id/to_pay"
                                    android:layout_width="100dp"
                                    android:layout_height="38dp"
                                    android:layout_marginTop="5dp"
                                    android:layout_gravity="center_horizontal"
                                    android:background="@drawable/general_theme_corner20_selector"
                                    android:gravity="center"
                                    android:text="@string/order_go_pay"
                                    android:textColor="@color/white"
                                    android:textSize="14sp"
                                    android:visibility="gone"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toBottomOf="@+id/address" />
                            </LinearLayout>
                            <TextView
                                android:id="@+id/result_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/background_white_corner10"
                                android:textColor="@color/gray_text333_color"
                                android:lineSpacingMultiplier="1.2"
                                android:visibility="gone"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/to_set_address"
                                android:layout_width="120dp"
                                android:layout_height="38dp"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="10dp"
                                android:background="@drawable/general_theme_corner20_selector"
                                android:gravity="center"
                                android:text="@string/order_set_address"
                                android:textColor="@color/white"
                                android:textSize="14sp"
                                android:visibility="gone" />

                        </LinearLayout>
                        <TextView
                            android:id="@+id/help_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:textColor="@color/helptext_color"
                            android:background="@drawable/background_white_corner10"
                            android:padding="10dp"
                            android:lineSpacingMultiplier="1.2"
                            android:textSize="14sp"
                            android:visibility="gone"
                            />
                        <RelativeLayout
                            android:id="@+id/no_invoice"
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:background="@drawable/background_white_corner5"
                            android:layout_marginTop="10dp"
                            android:visibility="gone"
                            android:layout_marginBottom="10dp"
                            >
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/invoice"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="15dp"
                                android:textColor="@color/gray_text333_color"
                                android:textSize="16sp"
                                />
                            <TextView
                                android:layout_width="18dp"
                                android:layout_height="18dp"
                                android:background="@mipmap/right_arrow"
                                android:layout_centerVertical="true"
                                android:layout_alignParentRight="true"
                                android:layout_marginRight="10dp"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/no_invoice"
                                android:layout_centerVertical="true"
                                android:textSize="14sp"
                                android:layout_alignParentRight="true"
                                android:layout_marginRight="30dp"
                                />
                        </RelativeLayout>
                        <RelativeLayout
                            android:id="@+id/invoice_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/background_white_corner5"
                            android:layout_marginTop="10dp"
                            android:padding="15dp"
                            android:layout_marginBottom="10dp"
                            >
                            <TextView
                                android:id="@+id/invoice_type"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/elec_invoice"
                                android:textColor="@color/gray_text333_color"
                                android:layout_marginTop="5dp"
                                android:textSize="16sp"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/modify"
                                android:background="@drawable/general_gray_edge_white_corner20_selector"
                                android:paddingLeft="15dp"
                                android:paddingRight="15dp"
                                android:paddingTop="5dp"
                                android:paddingBottom="5dp"
                                android:id="@+id/modify"
                                android:layout_alignParentRight="true"
                                />
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_marginTop="15dp"
                                android:layout_below="@+id/modify"
                                >
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"

                                    >
                                    <TextView
                                        android:layout_width="@dimen/invoice_width"
                                        android:layout_height="wrap_content"
                                        android:text="@string/invoice_type"
                                        android:textSize="14sp" />

                                    <TextView
                                        android:id="@+id/voice_type"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textColor="@color/gray_text333_color"
                                        android:textSize="14sp"
                                        android:layout_marginLeft="5dp"
                                        />
                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="8dp"
                                    >
                                    <TextView
                                        android:layout_width="@dimen/invoice_width"
                                        android:layout_height="wrap_content"
                                        android:text="@string/invoice_content"
                                        android:textSize="14sp" />

                                    <TextView
                                        android:id="@+id/invoice_content"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textColor="@color/gray_text333_color"
                                        android:text="@string/wares_detail"
                                        android:textSize="14sp"
                                        android:layout_marginLeft="5dp"
                                        />
                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="8dp"
                                    >
                                    <TextView
                                        android:layout_width="@dimen/invoice_width"
                                        android:layout_height="wrap_content"
                                        android:text="@string/invoice_title_type"
                                        android:textSize="14sp" />

                                    <TextView
                                        android:id="@+id/title_type"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textColor="@color/gray_text333_color"
                                        android:textSize="14sp"
                                        android:layout_marginLeft="5dp"
                                        />
                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="8dp"
                                    >
                                    <TextView
                                        android:layout_width="@dimen/invoice_width"
                                        android:layout_height="wrap_content"
                                        android:text="@string/invoice_title_name"
                                        android:textSize="14sp" />

                                    <TextView
                                        android:id="@+id/title_type_name"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textColor="@color/gray_text333_color"
                                        android:textSize="14sp"
                                        android:layout_marginLeft="5dp"
                                        />
                                </LinearLayout>
                                <LinearLayout
                                    android:id="@+id/tax_num"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="8dp"
                                    >
                                    <TextView
                                        android:layout_width="@dimen/invoice_width"
                                        android:layout_height="wrap_content"
                                        android:text="@string/tax_num"
                                        android:textSize="14sp" />

                                    <TextView
                                        android:id="@+id/company_num"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textColor="@color/gray_text333_color"
                                        android:textSize="14sp"
                                        android:layout_marginLeft="5dp"
                                        />
                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="8dp"
                                    >
                                    <TextView
                                        android:layout_width="@dimen/invoice_width"
                                        android:layout_height="wrap_content"
                                        android:text="@string/invoice_price"
                                        android:textSize="14sp" />

                                    <TextView
                                        android:id="@+id/invoice_price"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textColor="@color/gray_text333_color"
                                        android:textSize="14sp"
                                        android:layout_marginLeft="5dp"
                                        />
                                </LinearLayout>
                                <LinearLayout
                                    android:id="@+id/email_layout"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="8dp"
                                    >
                                    <TextView
                                        android:layout_width="@dimen/invoice_width"
                                        android:layout_height="wrap_content"
                                        android:text="@string/invoice_email"
                                        android:textSize="14sp" />

                                    <TextView
                                        android:id="@+id/invoice_email"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textColor="@color/gray_text333_color"
                                        android:textSize="14sp"
                                        android:layout_marginLeft="5dp"
                                        />
                                </LinearLayout>
                            </LinearLayout>
                        </RelativeLayout>

                    </LinearLayout>
            </ScrollView>
        </LinearLayout>


    </LinearLayout>

    <RelativeLayout
        android:id="@+id/waveLayout"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_centerInParent="true"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="100dp"
        android:background="#88555555"
        android:visibility="invisible">

        <com.ilesson.ppim.view.WaveLineView
            android:id="@+id/waveLineView"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:visibility="invisible"
            app:wlvBackgroundColor="@color/transparent" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/voice_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:background="@android:color/transparent">

        <com.ilesson.ppim.view.DragView
            android:id="@+id/floatBtn"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:scaleType="fitXY"
            android:background="@mipmap/speak0"
            />
    </RelativeLayout>
</RelativeLayout>