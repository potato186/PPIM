<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:maxHeight="120dp"
    android:minHeight="75dp">

    <ImageView
        android:id="@+id/business_icon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@mipmap/wares_icon"
        android:layout_centerVertical="true"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_toRightOf="@+id/business_icon"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/enter"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        >
        <TextView
            android:id="@+id/business_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/gray_text333_color"
            android:textSize="15sp"
            android:maxLines="2"
            android:ellipsize="end"
            />

        <TextView
            android:id="@+id/business_des"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginTop="5dp"
            android:textColor="@color/gray_text_color1"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="@+id/business_name"
            app:layout_constraintTop_toBottomOf="@+id/business_name" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="65dp"
        android:background="@color/gray_theme"
        android:layout_alignParentBottom="true"
        />

    <TextView
        android:id="@+id/enter"
        android:layout_width="65dp"
        android:layout_height="30dp"
        android:background="@drawable/general_gray_theme_btn_selector"
        android:gravity="center"
        android:text="@string/enter"
        android:textColor="@drawable/black_white_selector"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        />

</RelativeLayout>