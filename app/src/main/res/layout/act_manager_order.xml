<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_theme"
    android:orientation="vertical"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <RelativeLayout
        android:id="@+id/top_bar"
        style="@style/top_bar"
        >

        <RelativeLayout
            android:id="@+id/back"
            android:layout_width="@dimen/back_width"
            android:layout_height="match_parent"
            android:background="@drawable/general_tran_gray_btn_selector">

            <TextView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerInParent="true"
                android:background="@mipmap/back_icon" />
        </RelativeLayout>

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="@string/post_wares"
            android:textColor="@color/gray_text333_color"
            android:textSize="@dimen/text_title" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/top_bar"
        android:layout_above="@+id/save"
        android:layout_marginBottom="20dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/background_white_corner5"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="5dp"
            android:padding="15dp"
            >
            <!--<string name="input_logist_info">填写物流信息</string>
            <string name="logist_name_tip">快递公司名称:</string>
            <string name="hint_logist_name_tip">请填写快递公司名称</string>
            <string name="logist_num_tip">快递单号:</string>
            <string name="hint_logist_num_tip">请填写快递单号</string>
            <string name="confirm_post">确定发货</string>-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/input_logist_info"
                    android:textColor="@color/gray_text333_color"
                    android:textSize="17sp"
                    android:layout_centerVertical="true"
                    />
                <RelativeLayout
                    android:id="@+id/scan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/general_tran_gray_btn_selector">

                    <TextView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_centerInParent="true"
                        android:background="@mipmap/scan_qr_icon" />
                </RelativeLayout>
            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/logist_name_tip"
                android:textColor="@color/helptext_color"
                android:textSize="15sp"
                android:layout_marginTop="15dp"
                />
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="45dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginTop="4dp"
                android:background="@drawable/background_gray_edge_white_corner10"
                >

                <EditText
                    android:id="@+id/post_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_centerVertical="true"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:hint="@string/hint_logist_name_tip"
                    android:textCursorDrawable="@drawable/rc_shape_cursor_color"
                    android:textSize="16sp" />
            </RelativeLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/logist_num_tip"
                android:textColor="@color/helptext_color"
                android:textSize="15sp"
                android:layout_marginTop="20dp"
                />
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="45dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginTop="4dp"
                android:background="@drawable/background_gray_edge_white_corner10"
                >
                <EditText
                    android:id="@+id/post_no"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="@string/hint_logist_num_tip"
                    android:textCursorDrawable="@drawable/rc_shape_cursor_color"
                    android:background="@null"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:gravity="center_vertical"
                    android:textSize="16sp" />
            </RelativeLayout>
        </LinearLayout>
            <LinearLayout
                android:id="@+id/logistics_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/background_white_corner5"
                android:padding="15dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="5dp"
                android:orientation="vertical"
                >
                <LinearLayout
                    android:id="@+id/pay_time_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:layout_width="@dimen/order_item_left_item_width"
                        android:layout_height="wrap_content"
                        android:text="产品类型"
                        android:textSize="16sp"
                        />
                    <TextView
                        android:id="@+id/product_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/order_item_left_margin"
                        android:textSize="16sp"
                        android:textColor="@color/gray_text333_color"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/order_item_top_margin"
                    >
                    <TextView
                        android:layout_width="@dimen/order_item_left_item_width"
                        android:layout_height="wrap_content"
                        android:text="@string/quantity"
                        android:textSize="16sp"
                        />
                    <TextView
                        android:id="@+id/num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/order_item_left_margin"
                        android:textSize="16sp"
                        android:textColor="@color/gray_text333_color"
                        />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/order_num_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/order_item_top_margin"
                    >
                    <TextView
                        android:layout_width="@dimen/order_item_left_item_width"
                        android:layout_height="wrap_content"
                        android:text="@string/order_num"
                        android:textSize="16sp"
                        />
                    <TextView
                        android:id="@+id/order_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/order_item_left_margin"
                        android:textSize="16sp"
                        android:textColor="@color/gray_text333_color"
                        />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/consignee_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/order_item_top_margin"
                    >
                    <TextView
                        android:layout_width="@dimen/order_item_left_item_width"
                        android:layout_height="wrap_content"
                        android:text="@string/consignee"
                        android:textSize="16sp"
                        />
                    <TextView
                        android:id="@+id/consignee"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/order_item_left_margin"
                        android:textSize="16sp"
                        android:textColor="@color/gray_text333_color"
                        />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/phone_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/order_item_top_margin"
                    >
                    <TextView
                        android:layout_width="@dimen/order_item_left_item_width"
                        android:layout_height="wrap_content"
                        android:text="@string/phone_num_"
                        android:textSize="16sp"
                        />
                    <TextView
                        android:id="@+id/phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/order_item_left_margin"
                        android:textSize="16sp"
                        android:textColor="@color/gray_text333_color"
                        />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/consignee_address_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/order_item_top_margin"
                    >

                    <TextView
                        android:layout_width="@dimen/order_item_left_item_width"
                        android:layout_height="wrap_content"
                        android:text="@string/consignee_address"
                        android:textSize="16sp" />
                    <TextView
                        android:id="@+id/address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/order_item_left_margin"
                        android:textSize="16sp"
                        android:textColor="@color/gray_text333_color"
                        />
                </LinearLayout>
            </LinearLayout>
            <RelativeLayout
                android:id="@+id/invoice_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/background_white_corner5"
                android:paddingLeft="15dp"
                android:paddingBottom="15dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="5dp"
                >
                <RelativeLayout
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:id="@+id/check_layout"
                    android:layout_alignParentRight="true"
                    >
                    <ImageView
                        android:id="@+id/check_image"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@mipmap/uncheck"
                        android:layout_centerInParent="true"
                        />
                </RelativeLayout>
                <TextView
                    android:id="@+id/invoice_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/elec_invoice"
                    android:textColor="@color/gray_text333_color"
                    android:layout_marginTop="15dp"
                    android:textSize="16sp"
                    />
                <include
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="15dp"
                    android:layout_below="@+id/invoice_type"
                    layout="@layout/invoice_item"/>
            </RelativeLayout>

        </LinearLayout>
    </ScrollView>
    <TextView
        android:id="@+id/save"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:text="@string/confirm"
        android:textColor="@color/white"
        android:gravity="center"
        android:textSize="18sp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/general_theme_corner20_selector"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        />
</RelativeLayout>